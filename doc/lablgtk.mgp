Programming example

Hello World
%size 2

%font "code", size 4, prefix "    ", fore "yellow"
open GMain

let window =
    new GWindow.window border_width: 10

let button =
    new GButton.button
        label: "Hello World" packing: window#add

let _ =
  window#connect#destroy callback: Main.quit;
  button#connect#clicked callback: window#destroy;
  window#show ();
  Main.main ()

